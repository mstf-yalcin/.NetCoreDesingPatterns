@model IEnumerable<Web.Command.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a  asp-controller="Product" asp-route-type="@((int)Web.Command.Commands.EFileType.Pdf)" asp-action="CreateFile">Pdf</a>
    <a asp-controller="Product" asp-route-type="@((int)Web.Command.Commands.EFileType.Excel)" asp-action="CreateFile">Excel</a>
    <a asp-controller="Product"  asp-action="CreateFiles">CreateFiles</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
        </tr>
}
    </tbody>
</table>
